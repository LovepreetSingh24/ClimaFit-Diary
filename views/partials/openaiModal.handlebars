<button id="floatingButton" class="btn btn-primary" data-toggle="modal" data-target="#openaiModal">
    Ask ChatGPT
</button>

<div class="modal fade" id="openaiModal" tabindex="-1" role="dialog" aria-labelledby="openaiModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="openaiModalLabel">Ask OpenAI</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="openai-form">
          <div class="form-group">
            <label for="openai-question">Your Question:</label>
            <textarea class="form-control" id="openai-question" rows="3" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Ask</button>
        </form>
        <div id="openai-answer" class="mt-3"></div>
      </div>
    </div>
  </div>
</div>
